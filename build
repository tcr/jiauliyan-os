# params
CFLAGS="-Wall -Wextra -m32 -fstrength-reduce -fomit-frame-pointer -finline-functions -nostdinc -fno-builtin -nostdlib -nostartfiles -nodefaultlibs -I../src/sys -I../src/libc -I../src/kernel" # -Werror
CC="gcc"

cd bin

echo [Compiling]

for filename in ../src/*/*.s
do
	echo Compiling $filename ...
	file=`basename $filename .s`
	nasm -f elf -o $file.o $filename
done;

for filename in ../src/*/*.c
do
	echo Compiling $filename ...
	file=`basename $filename .c`
	$CC $CFLAGS -o $file.o -c $filename
done;

echo
echo [Linking]
mv loader.o loader.me
ld -melf_i386 -T ../assets/linker.ld -o kernel.bin loader.me *.o ../lua-5.1/src/*.o

echo
echo [Concat]
cat ../assets/stage1 ../assets/stage2 ../assets/pad kernel.bin > floppy.img

echo
echo Done.

cd ..
